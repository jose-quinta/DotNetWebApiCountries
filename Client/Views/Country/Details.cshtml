@model Client.Models.Country

<div class="row col-12 col-sm-10 col-md-9 col-lg-8 mx-auto">
    <h1 class="text-center my-3 fs-4" id="modalLabel">Details Country</h1>
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="Name" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row my-1">
        @if (Model.Provices.Count() > 0) {
            <ul class="list-group list-unstyled">
            @foreach (var item in Model.Provices) {
                <li class="list-group-item list-group-item-action">
                    <form asp-action="Index" asp-controller="Province" method="get">
                        <input name="search" value="@item.Name" hidden />
                        <button type="submit" class="border-0 text-decoration-none">@item.Name</button>
                    </form>
                </li>
            }
            </ul>
        } else {
            <h3 class="display-6 text-center text-danger">This country has no province</h3>
        }
    </div>
    <div class="form-group row mt-3">
        <div class="form-group row col-12 col-sm-10 col-md-9 col-lg-8 mx-auto">
            <div class="col-6">
                <a asp-controller="Country" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-primary form-control">Edit</a>
            </div>
            <div class="col-6">
                <a asp-controller="Country" asp-action="Index" class="btn btn-secondary form-control">Return to List</a>
            </div>
        </div>
    </div>
</div>