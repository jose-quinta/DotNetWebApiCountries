@model IEnumerable<Client.Models.Country>

@{
    ViewData["Title"] = "Countries";
}

<div class="my-3 d-md-flex justify-content-evenly">
    <div class="flex-grow-1 display-6 text-sm-center text-primary opacity-75">Country List</div>
    <div class="text-end">
        <button type="submit" class="create btn btn-info mt-1" data-toggle="modal">New Country</button>
    </div>
</div>

@if (Model.Count() < 1) {
    <h2 class="display-6 mt-3 text-center text-danger">There not are countries yet</h2>
} else {
    <div class="row col-8 mx-auto mb-3">
        <form asp-controller="Country" asp-action="Index" method="get">
            <div class="row form-group g-2">
                <div class="col-sm-7">
                    <input type="text" placeholder="Search country" id="search" name="search" class="form-control">
                </div>
                <div class="col col-sm-3">
                    <button type="submit" class="btn btn-success w-100 form-control">Submit</button>
                </div>
                <div class="col col-sm-2">
                    <a asp-controller="Country" asp-action="Index" class="btn btn-secondary form-control">Reset</a>
                </div>
            </div>
        </form>
    </div>
    <div class="row row-cols-sm-2 row-cols-md-3 row-cols-lg-3 g-2 g-sm-2 g-md-3 g-lg-3">
        @foreach (var item in Model) {
            <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                <div class="p-2 border rounded">
                    <div class="display-6 text-center my-2">@item.Name</div>
                    <div class="d-flex justify-content-center overflow-auto" role="button">
                        <button type="submit" class="edit btn btn-primary mt-1 mx-1" data-id="@item.Id" data-toggle="modal">Edit</button>
                        <button type="submit" class="details btn btn-info mt-1 mx-1" data-id="@item.Id" data-toggle="modal">Details</button>
                        <form asp-controller="Country" asp-action="Delete" method="post" class="mt-1 mx-1 p-0">
                            <input id="Id" name="Id" asp-for="@item.Id" hidden />
                            <button type="submit" class="delete btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog modal-md modal-dialog-scrollable" role="document">
        <div class="modal-content" id="contentModal">
        </div>
  </div>
</div>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(function () {
            function render(type, url) {
                $.ajax({
                    type: type,
                    url: url,
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        $('#contentModal').html(data);
                        $('#modal').modal('show');
                    },
                    error: function () {
                        alert("Dynamic content load failed");
                    }
                });
            }

            $(".create").click(function () {
                var url = '@Url.Action("Details", "Country")' + "?type=Create";
                render("GET", url);
            });

            $(".edit").click(function () {
                var url = '@Url.Action("Details", "Country")' + "?type=Edit" + "&id=" + $(this).attr('data-id');
                render("GET", url);
            });

            $(".details").click(function () {
                var url = '@Url.Action("Details", "Country")' + "?type=Details" + "&id=" + $(this).attr('data-id');
                render("GET", url);
            });
        });

    </script>
}
