@model Client.Models.Country

<div class="modal-header">
    <h1 class="modal-title fs-4" id="modalLabel">@Model.Name</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body overflow-y-auto">
    @if (Model.Provices.Count() > 0) {
        <ul class="list-group list-unstyled">
        @foreach (var item in Model.Provices) {
            <li class="list-group-item list-group-item-action">
                <form asp-action="Index" asp-controller="Province" method="get">
                    <input name="search" value="@item.Name" hidden />
                    <button type="submit" class="border-0 text-decoration-none">@item.Name</button>
                </form>
            </li>
        }
        </ul>
    } else {
        <h3 class="display-6 text-center text-danger">This country has no province</h3>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>