@model IEnumerable<Client.Models.Country>

@{
    ViewData["Title"] = "Home Page";
}

<div class="div-title text-center">
    <h1 class="display-4">Welcome Country List</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row row-cols-sm-2 row-cols-md-3 row-cols-lg-3 g-2 g-sm-2 g-md-3 g-lg-3">
    @if (Model.Count() < 6) {
        @for (var i=0; i < Model.Count(); i++) {
            <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                <div class="p-2 border rounded">
                    <div class="display-6 text-center my-2">@Model.ToList()[i].Name</div>
                    <div class="d-flex justify-content-center overflow-auto" role="button">
                        <button type="submit" class="details btn btn-info mt-1 mx-1" data-id="@Model.ToList()[i].Id" data-toggle="modal">Details</button>
                    </div>
                </div>
            </div>
        }
    } else {
        @for (var i=0; i < 6; i++) {
            <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                <div class="p-2 border rounded">
                    <div class="display-6 text-center my-2">@Model.ToList()[i].Name</div>
                    <div class="d-flex justify-content-center overflow-auto" role="button">
                        <button type="submit" class="details btn btn-info mt-1 mx-1" data-id="@Model.ToList()[i].Id" data-toggle="modal">Details</button>
                    </div>
                </div>
            </div>
        }
    }
</div>

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog modal-md modal-dialog-scrollable" role="document">
        <div class="modal-content" id="contentModal">
        </div>
  </div>
</div>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(function () {
            function render(type, url) {
                $.ajax({
                    type: type,
                    url: url,
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        $('#contentModal').html(data);
                        $('#modal').modal('show');
                    },
                    error: function () {
                        alert("Dynamic content load failed");
                    }
                });
            }

            $(".details").click(function () {
                var url = '@Url.Action("Details", "Country")' + "?type=Details" + "&id=" + $(this).attr('data-id');
                render("GET", url);
            });
        });

    </script>
}

